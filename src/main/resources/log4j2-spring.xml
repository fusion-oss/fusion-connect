<?xml version="1.0" encoding="UTF-8"?>
<Configuration monitorInterval="60">
	<Properties>
		<Property name="FILE_LOG_PATTERN">%d{yyyy-MM-dd HH:mm:ss.SSS} %5p [flights-api-sl4,%X{trace_id},%X{span_id}] ${PID:- } --- [%15.15t] %-40.40logger{39} : %m %n%wEx</Property>
	</Properties>
	<Appenders>
		<Console name="App-Console-Appender" target="SYSTEM_OUT">
			<PatternLayout>
				<Pattern>${FILE_LOG_PATTERN}</Pattern>
			</PatternLayout>
		</Console>
	</Appenders>
	<Loggers>
		<Logger name="com.scoperetail" level="INFO" additivity="false">
			<AppenderRef ref="App-Console-Appender"/>
		</Logger>
		<Logger name="org.apache.camel" level="INFO" additivity="false">
			<AppenderRef ref="App-Console-Appender"/>
		</Logger>
		<logger name="org.springframework.boot.SpringApplication"
				level="TRACE" additivity="false">
			<AppenderRef ref="App-Console-Appender"/>
		</logger>
		<Logger name="org.springframework.jdbc.core.JdbcTemplate"
				level="TRACE" additivity="false">
			<AppenderRef ref="App-Console-Appender"/>
		</Logger>
		<Logger name="com.zaxxer.hikari" level="INFO" additivity="false">
			<AppenderRef ref="App-Console-Appender"/>
		</Logger>
		<Root level="ERROR">
			<AppenderRef ref="App-Console-Appender"/>
		</Root>
	</Loggers>
</Configuration>